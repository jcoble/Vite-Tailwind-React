{
  "name": "stravital",
  "version": "0.1.0",
  "description": "A simple React starter template for your next react application.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rizkimcitra/stravital.git"
  },
  "scripts": {
    "dev": "tsc && vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "yarn eslint --config ./.eslintrc.js ./src/**/*.{tsx,ts}",
    "postinstall": "husky install",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "format": "prettier --config ./.prettierrc.js -w ./src/**/*.{tsx,ts}"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "jotai": "^1.5.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vitejs/plugin-react": "^1.1.4",
    "autoprefixer": "^10.3.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.7.0",
    "eslint-plugin-react": "7.28.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "postcss": "^8.3.6",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.5.4",
    "vite": "^2.7.10"
  },
  "keywords": [
    "starter template",
    "starter template vite react",
    "react vite tailwindcss",
    "react",
    "vite",
    "tailwindcss"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --write"
    ]
  }
}
